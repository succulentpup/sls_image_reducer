{
  "compilerOptions": {
    "sourceMap": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable"
    ],
    "target": "es2017",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "types/*": ["@types/*"],
      "helpers/*": ["helpers/*"],
      "packageJson": ["../package.json"]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}

